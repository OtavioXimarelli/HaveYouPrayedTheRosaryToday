# Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3001

# MongoDB Connection (Docker - run `docker-compose up -d` first)
MONGODB_URI=mongodb://rosary_user:rosary_password_2024@localhost:27017/rosary-app?authSource=rosary-app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
